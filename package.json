{
  "name": "express-es2017-boilerplate",
  "version": "1.2.1",
  "description": "Express boilerplate for building RESTful APIs",
  "author": "Denis Rupp <denis.rupp@n3wnormal.com>",
  "main": "src/index.js",
  "private": false,
  "license": "MIT",
  "engines": {
    "node": "12.13",
    "yarn": "*"
  },
  "scripts": {
    "precommit": "pretty-quick --staged && yarn lint",
    "docker-test": "pm2 start ecosystem.config.js --env production",
    "start": "yarn migrate && pm2 start ecosystem.config.js --only API --env production",
    "dev": "yarn migrate && yarn docs && pm2 start ecosystem.config.js --only API --env develop",
    "local": "yarn migrate && pm2 start ecosystem.config.js --only API_LOCAL && pm2 logs",
    "lint": "eslint . --ext .js --ignore-path .gitignore --ignore-pattern internals/scripts",
    "lint:fix": "pretty-quick --staged && yarn lint -- --fix",
    "lint:watch": "yarn lint -- --watch",
    "test": "cross-env NODE_ENV=test mocha --timeout 20000 --recursive src/api/tests --exit",
    "test:coverage": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --timeout 20000 --recursive src/api/tests --exit",
    "test:unit": "cross-env NODE_ENV=test mocha src/api/tests/unit",
    "test:integration": "cross-env NODE_ENV=test mocha --timeout 20000 src/api/tests/integration",
    "test:watch": "cross-env NODE_ENV=test mocha --watch src/api/tests/unit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "validate": "yarn lint && yarn test:coverage",
    "deploy": "sh ./deploy.sh",
    "docs": "apidoc -i src -o docs",
    "migrate": "sequelize db:migrate",
    "seeds": "sequelize db:seed"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:DenisRupp/API-express-starter.git"
  },
  "keywords": [
    "express",
    "node",
    "node.js",
    "sequelize",
    "postgres",
    "passport",
    "es6",
    "es7",
    "es8",
    "es2017",
    "mocha",
    "istanbul",
    "nyc",
    "eslint",
    "Travis CI",
    "coveralls",
    "REST",
    "API",
    "boilerplate",
    "generator",
    "starter project"
  ],
  "dependencies": {
    "axios": "^0.19.0",
    "bcryptjs": "2.4.3",
    "bluebird": "^3.7.1",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^6.0.3",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "express-status-monitor": "^1.2.7",
    "express-validator": "^6.2.0",
    "faker": "^4.1.0",
    "flat": "^5.0.0",
    "helmet": "^3.21.2",
    "http-status": "^1.4.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "method-override": "^3.0.0",
    "moment-timezone": "^0.5.27",
    "morgan": "^1.9.1",
    "nodemailer": "^6.3.1",
    "nodemailer-express-handlebars": "^3.1.0",
    "npm-merge-driver": "^2.3.5",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.12.1",
    "pg-hstore": "^2.3.3",
    "pm2": "^4.1.2",
    "sequelize": "^5.21.2",
    "sequelize-cli": "^5.5.1",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.3.0",
    "umzug": "^2.2.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "apidoc": "^0.18.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.7",
    "eslint": "6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "6.6.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "3.1.1",
    "husky": "^3.1.0",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "opn-cli": "^5.0.0",
    "prettier": "1.19.1",
    "pretty-quick": "^2.0.1",
    "supertest": "^4.0.2"
  },
  "eslintIgnore": [
    "src/api/database/",
    "ecosystem.config.js"
  ],
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "greenkeeper": {
    "lockfiles": {
      "outOfRangeUpdatesOnly": true
    }
  }
}
